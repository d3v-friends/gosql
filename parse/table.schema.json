{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.dev-friends.io/json/gosql.schema.json",
  "title": "GoSQL table schema",
  "description": "GoSQL table schema metadata",
  "type": "object",
  "required": [
    "columns"
  ],
  "properties": {
    "tableNm": {
      "description": "table name",
      "type": "string",
      "pattern": {
        "$ref": "#/$regexp/name"
      }
    },
    "columns": {
      "type": "object",
      "description": "column definitions",
      "patternProperties": {
        "^[a-z][0-9a-zA-Z]{4,30}$": {
          "type": {
            "$ref": "#/$column"
          }
        }
      }
    },
    "indexes": {
      "type": "array",
      "description": "united indexing data",
      "items": {
        "type": "object",
        "description": "index object",
        "properties": {
          "columns": {
            "type": "array",
            "description": "column name",
            "items": {
              "type": "string"
            }
          },
          "order": {
            "description": "order",
            "type": {
              "$ref": "#/$types/order"
            }
          },
          "unique": {
            "description": "unique",
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  },
  "$types": {
    "gotype": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "int64",
          "uint64",
          "string",
          "float32",
          "float64",
          "time.Time"
        ]
      }
    },
    "order": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "asc",
          "desc"
        ]
      }
    }
  },
  "$regexp": {
    "name": "^[a-z][0-9a-zA-Z]{4,30}$"
  },
  "$column": {
    "type": "object",
    "description": "column definitions",
    "required": [
      "gotype"
    ],
    "properties": {
      "gotype": {
        "description": "column go type",
        "type": {
          "$ref": "#/$types/gotype"
        }
      },
      "dbtype": {
        "description": "database type",
        "type": "string"
      },
      "nullable": {
        "description": "nullable",
        "type": "boolean",
        "default": false
      },
      "unique": {
        "description": "unique",
        "type": "boolean",
        "default": false
      },
      "index": {
        "description": "index",
        "type": {
          "$ref": "#/$types/order"
        }
      },
      "comment": {
        "description": "comment",
        "type": "string"
      }
    }
  }
}
